{
  "name": "banglish-tailwind",
  "version": "0.1.0",
  "description": "A utility-first CSS framework with Banglish (Bengali-English) class names, designed specifically for Bangladeshi developers.",
  "main": "index.js",
  "bin": {
    "banglish-tailwind": "./src/cli.js"
  },
  "directories": {
    "example": "examples",
    "test": "tests"
  },
  "scripts": {
    "build": "tsc && node build.js",
    "dev": "tsc --watch; nodemon build.js",
    "test": "jest",
    "preview": "npx serve examples",
    "clean": "rm -rf dist && rm -rf lib",
    "format": "prettier --write \"src/**/*.ts\"",
    "build:css": "postcss src/**/*.css -o dist/banglish.css"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "autoprefixer": "^10.4.23",
    "cssnano": "^7.1.2",
    "postcss": "^8.5.6",
    "postcss-js": "^5.0.3"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "postcss-cli": "^11.0.1",
    "prettier": "^3.7.4",
    "serve": "^14.2.5",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  }
}
